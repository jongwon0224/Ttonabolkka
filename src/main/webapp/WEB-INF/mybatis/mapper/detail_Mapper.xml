<?xml version="1.0" encoding="UTF-8"?> 
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="detail_mapper">

    <!-- 관광지 상세 정보 조회 (id) -->
    <select id="getPlaceDetail" resultType="Places" parameterType="int">
        SELECT id, name, description, address
        FROM PLACES
        WHERE id = #{id}
    </select>

    <!-- 관광지 상세 정보 조회 (placeName) -->
    <select id="getPlaceDetailByName" resultType="Places" parameterType="String">
        SELECT id, name, description, address
        FROM PLACES
        WHERE name = #{placeName}
    </select>

    <!-- 관광지 이미지 목록 조회 -->
    <select id="getPlaceImages" resultType="string">
        SELECT image_url
        FROM PLACES_IMG
        WHERE id = #{id}
    </select>

</mapper>
